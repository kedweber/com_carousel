<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade" overwrite="true">
	<name>Carousel</name>
	<author>Dave Li</author>
	<creationDate>November 2013</creationDate>
	<copyright>Copyright (C) 2013 Moyo Web Architects and Contributors. (http://www.moyoweb.nl)</copyright>
	<license>http://www.gnu.org/licenses/gpl.html GNU/GPL v3</license>
	<authorEmail>dave@moyoweb.nl</authorEmail>
	<authorUrl>www.moyoweb.nl</authorUrl>
	<version>1.0.0</version>
	<description>Carousel</description>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">install/install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">install/uninstall.sql</file>
		</sql>
	</uninstall>

	<administration>
		<menu>Carousel</menu>
		<submenu>
			<menu view="items">Items</menu>
			<menu view="categories">Categories</menu>
		</submenu>

		<files folder="administrator/components/com_carousel">
			<filename>dispatcher.php</filename>
			<filename>carousel.php</filename>
			<filename>carousel.xml</filename>
			<filename>manifest.xml</filename>
			<folder>databases</folder>
			<folder>install</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>templates</folder>
			<folder>views</folder>
		</files>

		<languages folder="administrator/components/com_carousel/language">
			<language tag="en-GB">en-GB.com_carousel.ini</language>
			<language tag="fr-FR">fr-FR.com_carousel.ini</language>
		</languages>
	</administration>
</extension>
